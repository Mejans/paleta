<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0" />
  <template class="ColorThiefPanel" parent="AdwBin">
    <property name="visible">false</property>
    <property name="child">
      <object class="AdwClamp">
        <property name="halign">end</property>
        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <property name="valign">fill</property>
            <property name="halign">fill</property>

            <style>
              <class name="darken"/>
            </style>

            <child>
              <object class="GtkBox" id="control_box">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="halign">fill</property>
                <property name="valign">fill</property>
                <property name="spacing">20</property>

                <property name="margin-start">20</property>
                <property name="margin-end">20</property>
                <property name="margin-top">20</property>
                <property name="margin-bottom">20</property>

                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">10</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="halign">start</property>
                        <property name="label" translatable="yes">Options</property>
                        <property name="ellipsize">end</property>
                        <!-- <attributes>
                        <attribute name="weight" value="PANGO_WEIGHT_LIGHT"/>
                        <attribute name="scale" value="1.3"/>
                      </attributes> -->

                        <style>
                          <class name="title-2"/>
                        </style>

                      </object>
                    </child>

                    <child>
                      <object class="GtkListBox" id="options_list_box">
                        <property name="halign">fill</property>
                        <property name="selection-mode">none</property>

                        <style>
                          <class name="boxed-list"/>
                        </style>

                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Palette Size</property>
                            <property name="subtitle" translatable="yes">Max amount of colors to retrieve.</property>
                            <property name="activatable-widget">count_amount_spin</property>

                            <child>
                              <object class="GtkSpinButton" id="count_amount_spin">
                                <property name="valign">center</property>
                                <property name="halign">center</property>
                                <property name="adjustment">palette_count_adj</property>
                                <property name="numeric">true</property>
                              </object>
                            </child>

                          </object>
                        </child>

                        <child>
                          <object class="AdwComboRow" id="accuracy_row">
                            <property name="title" translatable="yes">Accuracy</property>
                            <!-- <property name="activatable-widget">quality_dropdown</property> -->
                            <property name="selected">1</property>
                            <property name="model">
                              <object class="GtkStringList">
                                <items>
                                  <item translatable="yes">Precise</item>
                                  <item translatable="yes">Normal</item>
                                  <item translatable="yes">Low</item>
                                </items>
                              </object>
                            </property>

                          </object>
                        </child>

                        <!-- <child>
                        <object class="AdwActionRow">
                          <property name="title" translatable="yes">Palette Accuracy</property>
                          <property name="activatable-widget">quality_dropdown</property>

                          <child>
                            <object class="GtkDropDown" id="quality_dropdown">
                              <property name="valign">center</property>
                              <property name="selected">1</property>
                              <property name="model">
                                <object class="GtkStringList">
                                  <items>
                                    <item translatable="yes">Precise</item>
                                    <item translatable="yes">Normal</item>
                                    <item translatable="yes">Low</item>
                                  </items>
                                </object>
                              </property>
                            </object>
                          </child>

                        </object>
                      </child> -->

                      </object>
                    </child>
                  </object>
                </child>




                <child>
                  <object class="GtkOverlay" id="overlay">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>
                    <property name="child">
                      <object class="GtkBox" id="palette_box">
                        <property name="orientation">vertical</property>
                        <property name="visible">false</property>
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="halign">fill</property>
                        <property name="valign">fill</property>
                        <property name="spacing">10</property>

                        <child>
                          <object class="GtkBox">
                            <property name="halign">fill</property>
                            <property name="hexpand">true</property>

                            <child>
                              <object class="GtkLabel">
                                <property name="halign">start</property>
                                <property name="hexpand">true</property>
                                <property name="label" translatable="yes">Palette</property>
                                <property name="ellipsize">end</property>
                                <!-- <attributes>
                            <attribute name="weight" value="PANGO_WEIGHT_LIGHT"/>
                            <attribute name="scale" value="1.3"/>
                          </attributes> -->

                                <style>
                                  <class name="title-2"/>
                                </style>

                              </object>
                            </child>

                            <child>
                              <object class="GtkButton" id="save_button">
                                <property name="halign">end</property>
                                <property name="icon-name">star-outline-rounded-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Save Palette</property>

                                <style>
                                  <class name="circular"/>
                                  <class name="flat"/>
                                </style>

                              </object>
                            </child>

                          </object>
                        </child>


                        <child>
                          <object class="GtkScrolledWindow" id="scrolled_window">
                            <property name="hexpand">true</property>
                            <property name="halign">fill</property>
                            <property name="valign">fill</property>
                            <property name="propagate-natural-width">true</property>

                            <child>
                              <object class="GtkFlowBox" id="colors_flow_box">

                                <property name="hexpand">true</property>
                                <property name="vexpand">true</property>
                                <property name="halign">center</property>
                                <property name="valign">start</property>
                                <property name="max-children-per-line">3</property>
                                <property name="min-children-per-line">3</property>
                                <property name="column-spacing">5</property>
                                <property name="row-spacing">5</property>
                              </object>
                            </child>

                            <!-- <child>
                              <object class="GtkListBox" id="colors_list_box">
                                <property name="halign">fill</property>
                                <property name="valign">start</property>
                                <property name="vexpand">true</property>
                                <property name="hexpand">true</property>
                                <property name="selection-mode">single</property>
                                <style>
                                  <class name="boxed-list"/>
                                </style>
                              </object>
                            </child> -->

                          </object>
                        </child>

                        <!-- <child>
                          <object class="GtkSeparator">
                            <property name="orientation">horizontal</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkButton" id="save_button">
                            <property name="halign">center</property>
                            <property name="margin-top">20</property>
                            <property name="child">
                              <object class="AdwButtonContent">
                                <property name="icon-name">brush-symbolic</property>
                                <property name="label" translatable="yes">_Save Palette</property>
                                <property name="use-underline">True</property>
                              </object>
                            </property>
                            <style>
                              <class name="suggested-action"/>
                              <class name="pill"/>
                            </style>
                          </object>
                        </child> -->
                      </object>
                    </property>

                    <child type="overlay">
                      <object class="GtkBox">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkSpinner" id="spinner">
                            <property name="visible">false</property>
                            <property name="spinning">true</property>
                            <property name="can_focus">false</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>


              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>

  <object class="GtkAdjustment" id="palette_count_adj">
    <property name="upper">255</property>
    <property name="lower">2</property>
    <property name="value">5</property>
    <property name="step_increment">1</property>
    <property name="page_increment">10</property>
  </object>

</interface>